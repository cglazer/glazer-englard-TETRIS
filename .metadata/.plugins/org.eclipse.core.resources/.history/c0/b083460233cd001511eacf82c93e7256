package glazer.englard.tetris;

import java.awt.Color;

public class SPiece extends Piece{

	
	
	
	public SPiece() {
		super();
		super.color = Color.GREEN;
		startPosition();
	}

	private void startPosition() {
		super.row1 = -1;
		super.row2 = -1;
		super.row3 = 0;
		super.row4 = 0;
		super.column1 = 4;
		super.column2 = 5;
		super.column3 = 3;
		super.column4 = 4;

	}

	@Override
	public void turn() {
		int turnType = super.turnCounter % 4;
		switch (turnType) {
		case 1:
			// 1 and 4 stay 
			super.row2 += 1;
			super.row3 +=1;
			super.column3 += 2;
			break;
		case 2:
			// 2 and 4 stay
			super.row1 += 2;
			super.column4 -= 2;
			break;
		case 3:
			//3 and 4 stay
			super.row2 -=2;
			super.column3 -=2;
			break;
		case 0:
			super.row1 -=2;
			super.row2 -=1;
			super.row3 +=2;
			super.column2 +=2;
			break;

		}
		super.turnCounter++;
	}


}
