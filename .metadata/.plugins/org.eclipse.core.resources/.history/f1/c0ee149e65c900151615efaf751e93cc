package glazer.englard.tetris;

import java.awt.Color;

public class TPiece extends Piece implements PieceInterface {
	public TPiece() {
		super();
		super.color = new Color(128,0,128);
		startPosition();
	}

	private void startPosition() {
		super.row1 = -1;
		super.row2 = 0;
		super.row3 = 0;
		super.row4 = 0;
		super.column1 = 4;
		super.column2 = 4;
		super.column3 = 5;
		super.column4 = 6;

	}

	@Override
	public void turn() {
		int turnType = super.turnCounter % 4;
		switch (turnType) {
		case 1:
			
			break;
		case 2:
			
			break;
		case 3:
			
			break;
		case 0:
			break;

		}
		super.turnCounter++;

	}

}

