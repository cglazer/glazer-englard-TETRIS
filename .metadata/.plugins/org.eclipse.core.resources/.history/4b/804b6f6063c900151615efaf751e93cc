package glazer.englard.tetris;

import java.awt.Color;

public class JPiece extends Piece implements PieceInterface {
	public JPiece() {
		super();
		super.color = Color.BLUE;
		startPosition();
	}

	private void startPosition() {
		super.row1 = -1;
		super.row2 = 0;
		super.row3 = 0;
		super.row4 = 0;
		super.column1 = 3;
		super.column2 = 3;
		super.column3 = 4;
		super.column4 = 5;

	}

	@Override
	public void turn() {
		int turnType = super.turnCounter % 4;
		switch (turnType) {
		case 1:
			
			break;
		case 2:
			
			break;
		case 3:
			
			break;
		case 0:
			break;

		}
		super.turnCounter++;

	}

}
